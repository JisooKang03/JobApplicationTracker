@model IEnumerable<JobApplicationTracker.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
}

<h2>All Registered Users</h2>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Email</th>
            <th>UserName</th>
            <th style="width: 150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary me-2">Edit</a>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center mt-4">
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-dark">
        🔙 Back to Dashboard
    </a>
</div>
